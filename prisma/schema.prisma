generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("USER")
  posts     Blog[]
  // comments  Comment[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Blog {
  id             Int      @id @default(autoincrement())
  title          String
  slug           String   @unique
  authorId       Int
  status         Status   @default(DRAFT)
  published      Boolean  @default(false)
  tags           String[]              // array of tags
  thumbnail      String?               // optional
  content        Json                   // array of content blocks (Zod schema)
  tableOfContent Json                   // array of TOC items
  comments       Json?                  // optional array of comments
  likes          Int?                   // optional likes count
  relatedBlogs   Json?                  // optional array of related blog IDs or slugs
  author         User     @relation(fields: [authorId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}


enum Role {
  USER
  ADMIN
}

enum Status {
  DRAFT
  PUBLISHED
  ARCHIVED
}